pipeline {
  agent {
    label 'app-instance'
  }
  
  stages {
    stage('git Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Build Docker Image') {
      steps {
        sh 'cd test-nodeapp-1-task && sudo docker build . -t public.ecr.aws/s8b3a9g8/node-app:latest'
        sh 'aws ecr-public get-login-password --region us-east-1 | docker login --username AWS --password-stdin public.ecr.aws/s8b3a9g8'
        sh 'docker login -u AWS --password-stdin 647560355561.dkr.ecr.us-east-1.amazonaws.com'
        sh 'sudo docker push public.ecr.aws/s8b3a9g8/node-app:latest'
      }  
    }
   
    stage('Deploy to app host') {
      steps {
        sh 'sudo docker run -itd -p 8080:8080 --name HelloWorld 647560355561.dkr.ecr.us-east-1.amazonaws.com/node-app:${BUILD_NUMBER}'
      }
    }
  }
}
